  This page displays a specific album and its details and has a button to update a new photo
-->
<!-- only display if there is a notice -->
<% if !flash[:notice].blank? %>
  <div class = "alert alert-info">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="container" style="padding-left: 10px;">
  <div>
    <h1>Flash</h1>
  </div>
  <!-- Breadcrumb to link back to Home page -->
  <ol class="breadcrumb">
    <li><%= link_to "Home", albums_path %> > </li>
    <li class="active"><%= @album.name %></li>
  </ol>
  <!-- displays the name of the album -->
  <div>
    <h3><%= @album.name %></h3>
  </div>
  <!-- displays the date the album was created -->
  <div>
    <h4>Created on: <%= @album.created_date %></h4>
  </div>
  <!-- link to upload new photo -->
  <div style="padding-bottom: 20px;">
    <%= link_to "Upload Photo", new_photo_path(:album_id => @album.id), class: "btn btn-success" %>
  </div>
  <!-- displays the photos in the album -->
  <div style="padding-bottom: 20px;">
    <%= render "albums/photos" %>
  </div>
</div>